<?php

/**
 * @file
 * Install file.
 */

/**
 * Implements hook_install().
 */
function ds_panels_install() {
  db_update('system')
    ->fields(array('weight' => 2))
    ->condition('name', 'ds_panels')
    ->execute();

  drupal_set_message(t('You can disable the Extras module since it only has typical functions when using the Field UI.'));
}