<?php

/**
 * @file
 * Install file.
 */

/**
 * Implements hook_install().
 */
function ds_panels_install() {
  db_update('system')
    ->fields(array('weight' => 2))
    ->condition('name', 'ds_panels')
    ->execute();

  drupal_set_message('You should disable the Extras module as it only provides functionality when using the Field UI.');
}